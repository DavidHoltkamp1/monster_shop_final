<h1>Update Discount</h1>

<%= form_tag "/merchant/discounts/#{@discount.id}", method: :patch do %>
  <%= label_tag :name %>
  <%= text_field_tag :name, @discount.name %>

  <%= label_tag :description %>
  <%= text_field_tag :description, @discount.description %>

  <%= label_tag :percentage_off %>
  <%= text_field_tag :percentage_off, @discount.percentage_off %>

  <%= label_tag :minimum %>
  <%= text_field_tag :minimum, @discount.minimum %>

  <%= submit_tag 'Update Discount' %>
<% end %>
